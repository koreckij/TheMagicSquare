<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="7"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="center"
        android:layout_weight="60"
        >
        //Numbers from 1 to 9
        <EditText
            android:id="@+id/user_input_0"
            android:layout_row="0"
            android:layout_column="0"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/user_input_1"
            android:layout_row="0"
            android:layout_column="2"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/user_input_2"
            android:layout_row="0"
            android:layout_column="4"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/user_input_3"
            android:layout_row="2"
            android:layout_column="0"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number" />
        <EditText
            android:id="@+id/user_input_4"
            android:layout_row="2"
            android:layout_column="2"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number" />
        <EditText
            android:id="@+id/user_input_5"
            android:layout_row="2"
            android:layout_column="4"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/user_input_6"
            android:layout_row="4"
            android:layout_column="0"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number" />
        <EditText
            android:id="@+id/user_input_7"
            android:layout_row="4"
            android:layout_column="2"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/user_input_8"
            android:layout_row="4"
            android:layout_column="4"
            android:width="@dimen/edit_text_width_hor"
            android:height="@dimen/edit_text_height_hor"
            android:textSize="@dimen/result_text_size"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"/>

        //Symbols +/=
        <TextView
            android:text="+"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="="
            android:layout_row="0"
            android:layout_column="5"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:text="+"
            android:textSize="@dimen/static_board_text_size_hor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="2"
            android:text="+"
            android:textSize="@dimen/static_board_text_size_hor" />
        <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="4"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="="
            android:layout_row="2"
            android:layout_column="5"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="0"
            android:text="+"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="2"
            android:text="+"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="4"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="+"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:text="="
            android:layout_row="4"
            android:layout_column="5"
            android:textSize="@dimen/static_board_text_size_hor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="0"
            android:text="="
            android:textSize="@dimen/static_board_text_size_hor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="2"
            android:text="="
            android:textSize="@dimen/static_board_text_size_hor" />
        <TextView
            android:text="="
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="4"
            android:textSize="@dimen/static_board_text_size_hor"/>
        //Results
        <TextView
            android:id="@+id/result_row_0"
            android:text="0"
            android:layout_row="0"
            android:layout_column="6"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:id="@+id/result_row_1"
            android:text="0"
            android:layout_row="2"
            android:layout_column="6"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:id="@+id/result_row_2"
            android:text="0"
            android:layout_row="4"
            android:layout_column="6"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:id="@+id/result_column_0"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginTop="@dimen/fab_margin"/>
        <TextView
            android:id="@+id/result_column_1"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_row="6"
            android:layout_column="2"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginTop="@dimen/fab_margin"/>
        <TextView
            android:id="@+id/result_column_2"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_row="6"
            android:layout_column="4"
            android:textSize="@dimen/result_text_hor"
            android:layout_marginTop="@dimen/fab_margin"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:orientation="vertical"
        android:layout_marginRight="32dp">

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:fontFamily="sans-serif-black"
            android:text="@string/game_rule"
            android:textColor="@color/black"
            android:textSize="@dimen/important_text_font_size" />

        <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:textSize="@dimen/important_text_font_size"
            android:fontFamily="sans-serif-black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >
        <GridLayout
            android:id="@+id/buttons_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="2"
            android:columnCount="2"
            >

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:width="114dp"
                android:text="Submit" />
            <Button
                android:id="@+id/continue_button"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:enabled="false"
                android:text="Continue"/>
            <Button
                android:id="@+id/new_game_button"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:text="New Game"
                android:enabled="false"/>
            <Button
                android:id="@+id/exit_button"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:text="Exit Game"/>
        </GridLayout>
            <Button
                android:id="@+id/help_button"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="Help"
                android:layout_below="@id/buttons_grid"/>
            <LinearLayout
                android:layout_below="@id/help_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/fab_margin">
                <Button
                    android:id="@+id/decrease_level"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&lt;" />
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <Button
                    android:id="@+id/increase_level"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&gt;"
                    android:enabled="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>